
@{
    ViewBag.Title = "Tài khoản Doanh nghiệp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Page content -->
<div class="wrapper wrapper-content animated fadeInRight staff">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-title">
                    <h5>Danh sách tài khoản doanh nghiệp</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div><!-- ibox-title -->

                <div class="ibox-content">

                    <!-- Search group -->
                    <div class="row table-search-group">
                        <div class="col-md-3">
                            <input id="search-name" class="form-control m-b" placeholder="Họ tên">
                        </div>
                        <div class="col-md-3">
                            <input id="search-username" class="form-control m-b" placeholder="Tên tài khoản">
                        </div>
                        <div class="col-md-3">
                            <input id="search-company" class="form-control m-b" placeholder="Tên doanh nghiệp">
                        </div>
                        <div class="col-md-3">
                            <input id="search-email" class="form-control m-b" placeholder="Email">
                        </div>
                    </div>

                    <!--Button group -->
                    <div class="row table-button-group">
                        <div class="col-md-6 left"></div>
                        <div class="col-md-6 right text-right">
                            <a href=@Url.Action("CreateStaff", "Account") class="btn btn-primary main-action">
                                <i class="fa fa-plus"></i>Tạo tài khoản
                            </a>
                        </div>
                    </div>

                    <!-- Main table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover table-custom" id="staff-account-table">
                            <thead>
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Tài khoản</th>
                                    <th>Doanh nghiệp</th>
                                    <th>Địa chỉ</th>
                                    <th>Email</th>
                                    <th>Vị trí</th>
                                    <th>Thao tác</th>
                                </tr>

                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Tài khoản</th>
                                    <th>Doanh nghiệp</th>
                                    <th>Địa chỉ</th>
                                    <th>Email</th>
                                    <th>Vị trí</th>
                                    <th>Thao tác</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="row table-pagination">
                        <div class="col-sm-7 left"></div>
                        <div class="col-sm-5 right"></div>
                    </div>

                </div>
            </div><!-- /.ibox -->
        </div>
    </div>
</div><!-- Page content -->

<template id="template-table-action">
    <div>
        <a class="link js-activate" data-id="">
            <span class="my-tooltip center">
                <i class="fa fa-toggle-off"></i>
                <b class="tooltip-text">Khôi phục tài khoản</b>
            </span>
        </a>
        <a class="link js-deactivate" data-id="">
            <span class="my-tooltip center">
                <i class="fa fa-toggle-on"></i>
                <b class="tooltip-text">Khóa tài khoản</b>
            </span>
        </a>
        <a class="link js-change-password" href="@Url.Action("ChangePassword", "Account")">
            <span class="my-tooltip center">
                <i class="fa fa-lock"></i>
                <b class="tooltip-text">Đổi mật khẩu</b>
            </span>
        </a>
        <a class="link js-edit" href="@Url.Action("EditStaff", "Account")">
            <span class="my-tooltip center small-tooltip">
                <i class="fa fa-pencil"></i>
                <b class="tooltip-text">Sửa</b>
            </span>
        </a>
        <a class="link js-delete" data-id="">
            <span class="my-tooltip center small-tooltip">
                <i class="fa fa-trash"></i>
                <b class="tooltip-text">Xóa</b>
            </span>
        </a>
    </div>
</template>

@section scripts {
    <script src="~/Scripts/hieis-account-staff.js"></script>
    <script src="~/Scripts/hieis-tooltip.js"></script>
}
