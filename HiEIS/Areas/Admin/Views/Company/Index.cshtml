
@{
    ViewBag.Title = "Doanh nghiệp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Page content -->
<div class="wrapper wrapper-content animated fadeInRight Company">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-title">
                    <h5>Danh sách doanh nghiệp</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div><!-- ibox-title -->

                <div class="ibox-content">

                    <!-- Search group -->
                    <div class="row table-search-group">
                        <div class="col-md-3">
                            <input id="search-name" class="form-control m-b" placeholder="Tên doanh nghiệp">
                        </div>
                        <div class="col-md-3">
                            <input id="search-tax-no" class="form-control m-b" placeholder="Mã số thuế">
                        </div>
                        <div class="col-md-3">
                            <input id="search-address" class="form-control m-b" placeholder="Địa chỉ">
                        </div>
                        <div class="col-md-3">
                            <input id="search-tel" class="form-control m-b" placeholder="Số điện thoại">
                        </div>
                    </div>

                    <!--Button group -->
                    <div class="row table-button-group">
                        <div class="col-md-6 left"></div>
                        <div class="col-md-6 right text-right">
                            <a href=@Url.Action("Create", "Company") class="btn btn-primary main-action">
                                <i class="fa fa-plus"></i>Tạo doanh nghiệp
                            </a>
                        </div>
                    </div>

                    <!-- Main table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover table-custom" id="company-table">
                            <thead>
                                <tr>
                                    <th>Tên doanh nghiệp</th>
                                    <th>Địa chỉ</th>
                                    <th>Số điện thoại</th>
                                    <th>Email</th>
                                    <th>Website</th>
                                    <th>Fax</th>
                                    <th>Thao tác</th>
                                </tr>

                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th>Tên doanh nghiệp</th>
                                    <th>Địa chỉ</th>
                                    <th>Số điện thoại</th>
                                    <th>Email</th>
                                    <th>Website</th>
                                    <th>Fax</th>
                                    <th>Thao tác</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="row table-pagination">
                        <div class="col-sm-7 left"></div>
                        <div class="col-sm-5 right"></div>
                    </div>

                </div>
            </div><!-- /.ibox -->
        </div>
    </div>
</div><!-- Page content -->

<template id="template-table-action">
    <div>
        <a class="link js-activate" data-id="">
            <span class="my-tooltip center">
                <i class="fa fa-toggle-off"></i>
                <b class="tooltip-text">Khôi phục doanh nghiệp</b>
            </span>
        </a>
        <a class="link js-deactivate" data-id="">
            <span class="my-tooltip center">
                <i class="fa fa-toggle-on"></i>
                <b class="tooltip-text">Khóa doanh nghiệp</b>
            </span>
        </a>
        <a class="link js-edit" href="@Url.Action("Edit", "Company")">
            <span class="my-tooltip center small-tooltip">
                <i class="fa fa-pencil"></i>
                <b class="tooltip-text">Sửa</b>
            </span>
        </a>
        <a class="link js-delete" data-id="">
            <span class="my-tooltip center small-tooltip">
                <i class="fa fa-trash"></i>
                <b class="tooltip-text">Xóa</b>
            </span>
        </a>
    </div>
</template>

@section scripts {
    <script src="~/Scripts/hieis-company.js"></script>
    <script src="~/Scripts/hieis-tooltip.js"></script>
}
