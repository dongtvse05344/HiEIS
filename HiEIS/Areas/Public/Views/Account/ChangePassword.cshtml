@{
    ViewBag.Title = "Tài khoản";
    Layout = "~/Areas/Public/Views/Shared/_Layout.cshtml";
}

<!-- Page content -->
<div class="wrapper wrapper-content animated fadeInRight small-form">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-title">
                    <h5>Thay đổi mật khẩu</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div><!-- ibox-title -->

                <div id="password-form" class="ibox-content">

                    <table class="input-table">
                        <tr>
                            <td>
                                <span class="input-required">Mật khẩu</span>
                            </td>
                            <td>
                                @Html.Password("Password", null, new { @class = "form-control" })
                                <span class="field-validation-error"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span class="input-required">Xác nhận mật khẩu</span>
                            </td>
                            <td>
                                @Html.Password("ConfirmPassword", null, new { @class = "form-control" })
                                <span class="field-validation-error"></span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="color: red">* Bắt buộc</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <button id="change-password" type="submit" data-url="@ViewBag.PreviousUrl" class="btn btn-primary">Lưu</button>
                                <a id="return" href="@ViewBag.PreviousUrl" class="btn btn-default">Quay lại</a>
                            </td>
                        </tr>
                    </table>


                </div>
            </div><!-- /.ibox -->
        </div>
    </div>
</div><!-- Page content -->

@section scripts {
    <script src="~/Scripts/hieis-profile.js"></script>
}
