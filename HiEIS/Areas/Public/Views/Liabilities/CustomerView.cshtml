@{
    ViewBag.Title = "Công nợ";
    Layout = "~/Areas/Public/Views/Shared/_Layout.cshtml";
}

<!-- Page content -->
<div class="wrapper wrapper-content animated fadeInRight staff">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-maragins">

                <div class="ibox-title">
                    <h5>Danh sách nợ</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div><!-- ibox-title -->

                <div class="ibox-content">

                    <!-- Search group -->
                    <div class="row table-search-group">
                        <div class="col-md-3">
                            <input id="search-name" class="form-control m-b" placeholder="Tên doanh nghiệp">
                        </div>
                        <div class="col-md-3">
                            <input id="search-address" class="form-control m-b" placeholder="Địa chỉ">
                        </div>
                        <div class="col-md-3">
                            <input id="search-tel" class="form-control m-b" placeholder="Số điện thoại">
                        </div>
                    </div>

                    <!--Button group -->
                    <div class="row table-button-group">
                        <div class="col-md-6 left"></div>
                        <div class="col-md-6 right text-right">
                        </div>
                    </div>

                    <!-- Main table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover table-custom" id="liabilities-table">
                            <thead>
                                <tr>
                                    <th>Doanh nghiệp</th>
                                    <th>Địa chỉ</th>
                                    <th>Số điện thoại</th>
                                    <th>Tổng nợ</th>
                                    <th>Tổng trả</th>
                                    <th>Còn lại</th>
                                    <th>Thao tác</th>
                                </tr>

                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th>Doanh nghiệp</th>
                                    <th>Địa chỉ</th>
                                    <th>Số điện thoại</th>
                                    <th>Tổng nợ</th>
                                    <th>Tổng trả</th>
                                    <th>Còn lại</th>
                                    <th>Thao tác</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="row table-pagination">
                        <div class="col-sm-7 left"></div>
                        <div class="col-sm-5 right"></div>
                    </div>

                </div>
            </div><!-- /.ibox -->
        </div>
    </div>
</div><!-- Page content -->

@section scripts{

    <script src="~/Scripts/hieis-liabilities-customer.js"></script>

}